@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Film.Localization
@using Volo.Abp.Users
@model Film.Web.Pages.IndexModel
@inject IHtmlLocalizer<FilmResource> L
@inject ICurrentUser CurrentUser
@section styles {
<abp-style src="/Pages/Index.css" />
}
@section scripts {
<abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">

        <h1>Welcome to lioVideos</h1>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }

    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-auto text-center">
                    <img src="~/images/logo/logo.jpg" style="max-width: 400px;" class="w-100 mb-5 my-md-3">
                </div>
                <div class="col-md d-flex align-items-center">
                    <div class="pe-0 pe-md-4">
                        <h2 class="mb-4">Peliculas Piratas</h2>
                        <h4 class="mb-4">Deja de gastar dinero en los cines y en Netflix</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md d-flex align-items-center">
                    <div class="pe-0 pe-md-4">
                        <h2 class="mb-4">Suscripción: 2€/mes</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
