@page
@model Film.Web.Pages.Movies.InfoModalModel
@using Film.Permissions
@using Microsoft.AspNetCore.Authorization
@using Film.Web.Menus
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Film.Localization
@inject IHtmlLocalizer<FilmResource> L
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal


@{
    Layout = null;
}

<div id="InfoModalPersona" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="UserCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <abp-modal-header title="@L["Información Movie"].Value"></abp-modal-header>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="modal-body ">
                <div class="container">
                    <div class="form-group row">
                        <div class="col-md-12 text-center">
                            <img src="@Model.Movie.Logo" height="260" width="200" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <abp-input label="@L["Title"].Value" asp-for="Movie.Title" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <abp-input label="@L["Year"].Value" asp-for="Movie.Year" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <abp-input label="@L["Genre"].Value" asp-for="Movie.Genre" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <abp-input label="@L["Director"].Value" asp-for="Movie.Director" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <abp-input label="@L["Description"].Value" asp-for="Movie.Description" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <abp-input label="@L["Rating"].Value" asp-for="Movie.Rating" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <abp-input label="@L["Duration"].Value" asp-for="Movie.Duration" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label>URL</label>
                            <a href="@Model.Movie.Url">@Model.Movie.Url</a>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end align-items-center mt-3">
                    <abp-modal-footer buttons="@(AbpModalButtons.Close)"></abp-modal-footer>
                </div>
            </div>
        </div>
    </div>
</div>